<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
<meta charset="UTF-8" />
<title>IT Supervisor Log In Page</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<style>
:root {
  --blue-900: #1e3a8a;
  --blue-900-dark: #1a336f;
  --gray-100: #f3f4f6;
  --gray-700: #374151;
  --gray-300: #d1d5db;
  --orange-500: #f97316;
  --orange-600: #ea580c;
}
body {
  background-color: var(--gray-100);
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}
.container {
  width: 100%;
  max-width: 600px;
  padding: 15px;
}
.blue-heading {
  background-color: var(--blue-900);
  color: white;
  padding: 15px;
  border-radius: 5px;
  text-align: center;
}
.form-wrapper {
  background: white;
  padding: 20px;
  border-radius: 8px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.form-control {
  border: 1px solid var(--gray-300);
}
.form-control:focus {
  border-color: var(--blue-900);
  box-shadow: 0 0 0 2px #f97316;
}
label {
  font-weight: 500;
  margin-bottom: 4px;
  color: var(--gray-700);
}
.position-relative {
  position: relative;
}
.password-toggle {
  position: absolute;
  top: 50%;
  right: 1rem;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 1.25rem;
}
#passwordError {
  color: #dc3545;
  font-size: 0.875rem;
  margin-top: 0.25rem;
}
.btn-custom {
  background-color: var(--orange-500);
  color: #fff;
  border: none;
  font-weight: 600;
  padding: 0.5rem 1.5rem;
  border-radius: 0.375rem;
  transition: background-color 0.3s ease;
}
.btn-custom:hover {
  background-color: var(--orange-600);
  color: #fff;
}
</style>
</head>
<body>
  <div class="container">
    <div class="blue-heading mb-4">
      <h2 class="mb-0">LOG IN</h2>
      <p class="mb-0">Enter Credentials</p>
    </div>

    <% if (typeof error !== "undefined" && error) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>

    <div class="form-wrapper">
      <form action="/login" method="POST" class="bg-white p-4 rounded shadow-sm" id="loginForm" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input 
            type="email" 
            class="form-control" 
            id="email" 
            name="email" 
            required 
            autocomplete="email" 
            placeholder="Enter your email address"
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="position-relative">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
              placeholder="Enter your password"
              style="padding-right: 3rem;"
              autocomplete="current-password"
            />
            <span id="togglePassword" class="password-toggle">🙈</span>
          </div>
        </div>

        <div class="text-end">
          <button type="submit" class="btn btn-custom">Log In</button>
        </div>

        <p class="mt-4 text-sm">Don’t have an account?
        <a href="/submit-supervisor" class="text-blue-600 hover:underline">Register here</a>
        </p>

      </form>
    </div>
  </div>

  <script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordField = document.getElementById("password");

    togglePassword.addEventListener("click", () => {
      const isPassword = passwordField.type === "password";
      passwordField.type = isPassword ? "text" : "password";
      togglePassword.textContent = isPassword ? "👁️" : "🙈";
    });

    document.getElementById("loginForm").addEventListener("submit", (e) => {
      const email = document.getElementById("email").value.trim();
      const password = passwordField.value.trim();

      if (!email) {
        alert("Please enter your email address.");
        e.preventDefault();
        return;
      }
      if (!password) {
        alert("Please enter your password.");
        e.preventDefault();
        return;
      }
    });
  </script>
</body>
</html>
