<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Student Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-blue-50 font-sans min-h-screen">
  <div class="flex relative">
    <div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 hidden z-30 md:hidden"></div>

    <aside id="sidebar"
      class="bg-[#1e3a5f] text-white w-64 p-6 flex flex-col items-center fixed inset-y-0 left-0
             transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out z-40">
      <div class="bg-white text-[#1e3a5f] rounded-full p-4 mb-4">
        <span class="text-2xl font-bold">ğŸ‘¤</span>
      </div>
      <h2 class="text-xl font-bold"><%= user.Name %></h2>
      <p class="text-sm mb-6"><%= user.Email_Address %></p>

      <nav class="mt-6 text-left w-full flex flex-col h-full">
        <div class="space-y-4 flex-grow">
          <a href="/supervisorDashboard" class="block hover:text-blue-300">ğŸ“Š Dashboard</a>
          <a href="/students" class="block hover:text-blue-300">ğŸ‘¥ Students</a>
          <a href="/calendar" class="block hover:text-blue-300">ğŸ—“ï¸ Calendar</a>
          <a href="/notifications" class="block hover:text-blue-300">
            ğŸ”” Notifications
            <% if (hasUnreadNotifications) { %>
              <span class="text-red-500 ml-2 font-bold">â—</span>
            <% } %>
          </a>
          <a href="/settings" class="block hover:text-blue-300">âš™ï¸ Settings</a>
        </div>
        <div>
          <a href="/logout" class="block hover:text-blue-300">ğŸšª Logout</a>
        </div>
      </nav>
    </aside>

    <main class="flex-1 p-4 sm:p-8 overflow-y-auto ml-0 md:ml-64 transition-all duration-300">
      <div class="flex items-center justify-between mb-6">
        <h1 class="flex items-center text-2xl font-bold text-[#1e3a5f]">
          <button id="sidebarToggleBtn" class="p-2 mr-3 rounded bg-[#1e3a5f] text-white focus:outline-none md:hidden" aria-label="Toggle Sidebar">
            <span class="block w-6 h-0.5 bg-white mb-1"></span>
            <span class="block w-6 h-0.5 bg-white mb-1"></span>
            <span class="block w-6 h-0.5 bg-white"></span>
          </button>
          Student Details for <%= student.name %>
        </h1>
      </div>

      <% if (success) { %>
        <div class="mb-4 p-3 rounded text-white bg-green-500"><%= success %></div>
      <% } %>
      <% if (error) { %>
        <div class="mb-4 p-3 rounded text-white bg-red-500"><%= error %></div>
      <% } %>

      <section class="bg-white p-6 rounded-lg shadow mb-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold text-[#1e3a5f]">Log Section</h2>
          <a href="/student/<%= encodeURIComponent(student['mat_number']) %>/logs"
             class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">
            View All Logs â†’
          </a>
        </div>

        <% if (latestLog) { %>
          <div class="border-b pb-4">
            <p class="text-gray-500 text-sm"><%= new Date(latestLog.date).toLocaleDateString() %></p>
            <p class="mt-1 text-gray-800"><%= latestLog.log %></p>

            <% if (latestLog.image_url) { %>
              <div class="mt-4">
                <p class="font-semibold text-[#1e3a5f] mb-2">Attached Image:</p>
                <img src="<%= latestLog.image_url %>" alt="Student Log Image" 
                     class="max-w-full h-auto border border-gray-300 rounded shadow-sm" />
                <div class="mt-2">
                  <a href="<%= latestLog.image_url %>" target="_blank" class="text-orange-600">
                    View Full Size â†’
                  </a>
                </div>
              </div>
            <% } %>
          </div>
        <% } else { %>
          <p class="text-gray-500 italic">No logs available for this student.</p>
        <% } %>
      </section>

      <div class="flex gap-6 mt-6 items-stretch">
        <section class="bg-white p-6 rounded-lg shadow w-1/3 flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-bold text-[#1e3a5f]">Student Info</h2>
            <div class="grid grid-cols-2 gap-y-2 mt-2">
              <p class="font-medium">Name:</p>
              <p><%= student['name'] %></p>

              <p class="font-medium">Matric Number:</p>
              <p><%= student['mat_number'] %></p>

              <p class="font-medium">Department:</p>
              <p><%= student['department'] %></p>

              <p class="font-medium">School:</p>
              <p><%= student['school'] %></p>
            </div>
          </div>

          <div class="mt-4">
            <a href="/student/<%= encodeURIComponent(student['mat_number']) %>/info"
              class="text-orange-600">View Profile â†’
            </a>
          </div>
        </section>

        <section class="bg-white p-6 rounded-lg shadow w-2/3 flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-bold text-[#1e3a5f]">Supervisor Remark</h2>
            <% if (latestLog) { %>
            <form action="/student/<%= encodeURIComponent(student['mat_number']) %>/save-remark" method="POST">
            <textarea name="remark" class="w-full h-32 border rounded p-2 focus:ring-2 focus:ring-orange-500 focus:outline-none" placeholder="Enter remarks here...."><%= latestLog.remark || "" %></textarea>
          </div>

          <div class="mt-4 text-right">
            <button type="submit" class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">
              Save Remark
            </button>
          </div>
          <% } else { %>
            <p class="text-gray-500 italic">No recent log available for remarks.</p>
          <% } %>  
        </section>
      </div>
    </main>
  </div>

  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('sidebarToggleBtn');
    const overlay = document.getElementById('overlay');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
      overlay.classList.toggle('hidden');
    });

    overlay.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      overlay.classList.add('hidden');
    });

    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        overlay.classList.add('hidden');
        sidebar.classList.remove('-translate-x-full');
      }
    });
  </script>
</body>
</html>