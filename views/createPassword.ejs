<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>IT Supervisor Password Creation</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<style>
:root {
  --blue-900: #1e3a8a;
  --blue-900-dark: #1a336f;
  --gray-100: #f3f4f6;
  --gray-700: #374151;
  --gray-300: #d1d5db;
  --orange-500: #f97316;
  --orange-600: #ea580c;
}
body {
  background-color: var(--gray-100);
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}
.container {
  width: 100%;
  max-width: 600px;
  padding: 15px;
}
.blue-heading {
  background-color: var(--blue-900);
  color: #fff;
  padding: 15px;
  border-radius: 5px;
  text-align: center;
}
.form-wrapper {
  background: #fff;
  padding: 20px;
  border-radius: 8px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 0 10px rgba(0,0,0,.1);
}
.form-control {
  border: 1px solid var(--gray-300);
}
.form-control:focus {
  border-color: var(--blue-900);
  box-shadow: 0 0 0 2px #f97316;
}
label {
  font-weight: 500;
  margin-bottom: 4px;
  color: var(--gray-700);
}
.position-relative {
  position: relative;
}
.password-toggle {
  position: absolute;
  top: 50%;
  right: 1rem;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 1.25rem;
}
#passwordError {
  color: #dc3545;
  font-size: 0.875rem;
  margin-top: 0.25rem;
}
.btn-custom {
  background-color: var(--orange-500);
  color: #fff;
  border: none;
  font-weight: 600;
  padding: 0.5rem 1.5rem;
  border-radius: 0.375rem;
  transition: background-color 0.3s ease;
}
.btn-custom:hover {
  background-color: var(--orange-600);
  color: #fff;
}
</style>
</head>
<body>
<div class="container">
  <div class="blue-heading mb-4">
    <h2 class="mb-0">Please Create Password</h2>
    <p class="mb-0">Please Create Supervisor Password</p>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
  <% } %>

  <div class="form-wrapper">
    <form id="passwordForm" action="/create-password" method="POST" class="bg-white p-4 rounded shadow-sm" novalidate>
      <input type="hidden" name="email" value="<%= email %>" />
        <input type="hidden" name="mode" value="<%= mode %>" />


      <div class="mb-3">
        <label for="create_password" class="form-label">Create Password</label>
        <div class="position-relative">
          <input
            type="password"
            class="form-control"
            id="create_password"
            name="password"
            required
            minlength="8"
            placeholder="Enter your password"
            style="padding-right: 3rem;"
            autocomplete="new-password"
            aria-describedby="passwordHelp"
          />
          <span id="togglePassword" class="password-toggle">ðŸ™ˆ</span>
        </div>
        <div id="passwordHelp" class="form-text">Password must be at least 8 characters.</div>
      </div>

      <div class="mb-3">
        <label for="confirm_password" class="form-label">Confirm Password</label>
        <div class="position-relative">
          <input
            type="password"
            class="form-control"
            id="confirm_password"
            name="confirmPassword"
            required
            minlength="8"
            placeholder="Confirm your password"
            style="padding-right: 3rem;"
            autocomplete="new-password"
          />
          <span id="toggleConfirmPassword" class="password-toggle">ðŸ™ˆ</span>
        </div>
        <div id="passwordError" class="d-none" role="alert">Passwords do not match.</div>
      </div>

      <div class="text-end">
        <button type="submit" class="btn btn-custom">Submit</button>
      </div>
    </form>
  </div>
</div>

<script>
const passwordField = document.getElementById("create_password");
const confirmPasswordField = document.getElementById("confirm_password");
const togglePassword = document.getElementById("togglePassword");
const toggleConfirmPassword = document.getElementById("toggleConfirmPassword");
const passwordError = document.getElementById("passwordError");

togglePassword.addEventListener("click", () => {
  const isPassword = passwordField.type === "password";
  passwordField.type = isPassword ? "text" : "password";
  togglePassword.textContent = isPassword ? "ðŸ‘ï¸" : "ðŸ™ˆ";
});

toggleConfirmPassword.addEventListener("click", () => {
  const isPassword = confirmPasswordField.type === "password";
  confirmPasswordField.type = isPassword ? "text" : "password";
  toggleConfirmPassword.textContent = isPassword ? "ðŸ‘ï¸" : "ðŸ™ˆ";
});

document.getElementById("passwordForm").addEventListener("submit", (e) => {
  if (passwordField.value !== confirmPasswordField.value) {
    e.preventDefault();
    passwordError.classList.remove("d-none");
  } else {
    passwordError.classList.add("d-none");
  }
});
</script>
</body>
</html>
